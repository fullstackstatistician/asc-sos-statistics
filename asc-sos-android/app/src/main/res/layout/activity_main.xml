<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
              android:layout_width="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/settingsButton"
        android:src="@drawable/ic_view_headline_black_48dp"
        android:onClick="settingsClick"/>

    <TextView
        android:id="@+id/sibling_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/sib_q"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zeroTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="zeroClick"
            android:text="@string/zero"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/oneTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="oneClick"
            android:text="@string/one"
            android:textAlignment="center"
            android:textColor="#ff9d00"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/twoTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="twoClick"
            android:text="@string/two"
            android:textAlignment="center"
            android:textColor="#209e04"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/threeTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="threeClick"
            android:text="@string/three"
            android:textAlignment="center"
            android:textColor="#005dff"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fourTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="fourClick"
            android:text="@string/four"
            android:textAlignment="center"
            android:textColor="#aa00ff"
            android:textSize="84sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fiveTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="fiveClick"
            android:text="@string/five"
            android:textAlignment="center"
            android:textColor="#aa00ff"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sixTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="sixClick"
            android:text="@string/six"
            android:textAlignment="center"
            android:textColor="#005dff"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sevenTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="sevenClick"
            android:text="@string/seven"
            android:textAlignment="center"
            android:textColor="#209e04"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/eightTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="eightClick"
            android:text="@string/eight"
            android:textAlignment="center"
            android:textColor="#ff9d00"
            android:textSize="84sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nineTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:fontFamily="casual"
            android:onClick="nineClick"
            android:text="@string/nine"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="84sp"
            android:textStyle="bold"/>

    </LinearLayout>




</LinearLayout>